<UserControl x:Class="AgroCulture.Views.CabinManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewmodels="clr-namespace:AgroCulture.ViewModels">

    <UserControl.DataContext>
        <viewmodels:CabinManagementViewModel/>
    </UserControl.DataContext>

    <Grid Margin="24">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="24"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ═══════════════════════════════════════════ -->
        <!-- ЛЕВАЯ КОЛОНКА: ФОРМА ДОБАВЛЕНИЯ -->
        <!-- ═══════════════════════════════════════════ -->
        <materialDesign:Card Grid.Column="0" Padding="24">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Добавить домик" 
                              FontSize="20" 
                              FontWeight="Medium" 
                              Margin="0,0,0,24"/>

                    <!-- Название -->
                    <TextBox materialDesign:HintAssist.Hint="Название *"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Text="{Binding NewCabinName, UpdateSourceTrigger=PropertyChanged}"
                            Margin="0,0,0,16"/>

                    <!-- Описание -->
                    <TextBox materialDesign:HintAssist.Hint="Описание"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Text="{Binding NewCabinDescription, UpdateSourceTrigger=PropertyChanged}"
                            TextWrapping="Wrap"
                            AcceptsReturn="True"
                            MinLines="3"
                            Margin="0,0,0,16"/>

                    <!-- Вместимость -->
                    <TextBox materialDesign:HintAssist.Hint="Вместимость (чел) *"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Text="{Binding NewCabinCapacity, UpdateSourceTrigger=PropertyChanged}"
                            Margin="0,0,0,16"/>

                    <!-- Цена -->
                    <TextBox materialDesign:HintAssist.Hint="Цена за ночь (₽) *"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Text="{Binding NewCabinPrice, UpdateSourceTrigger=PropertyChanged}"
                            Margin="0,0,0,16"/>

                    <!-- Удобства (CheckBox список) -->
                    <TextBlock Text="Удобства:"
                              FontSize="14"
                              Margin="0,0,0,8"/>

                    <Border BorderBrush="#E0E0E0" 
                           BorderThickness="1" 
                           CornerRadius="4"
                           Padding="12"
                           MaxHeight="300"
                           Margin="0,0,0,16">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding SelectedAmenities}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Content="{Binding Amenity.Name}"
                                                 IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                                 Margin="0,4"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>

                    <!-- Кнопка добавить -->
                    <Button Content="Добавить домик"
                           Command="{Binding AddCabinCommand}"
                           Style="{StaticResource MaterialDesignRaisedButton}"
                           Height="40"/>
                </StackPanel>
            </ScrollViewer>
        </materialDesign:Card>

        <!-- ═══════════════════════════════════════════ -->
        <!-- ПРАВАЯ КОЛОНКА: СПИСОК ДОМИКОВ -->
        <!-- ═══════════════════════════════════════════ -->
        <materialDesign:Card Grid.Column="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <Border Grid.Row="0" Height="56" Padding="24,0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                            <GradientStop Color="#2E7D32" Offset="0"/>
                            <GradientStop Color="#00897B" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>

                    <TextBlock Text="Список домиков" 
                              FontSize="18" 
                              Foreground="White" 
                              VerticalAlignment="Center"/>
                </Border>

                <!-- Таблица -->
                <DataGrid Grid.Row="1"
                         ItemsSource="{Binding Cabins}"
                         AutoGenerateColumns="False"
                         CanUserAddRows="False"
                         IsReadOnly="True"
                         Margin="16">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="150"/>
                        <DataGridTextColumn Header="Вместимость" Binding="{Binding Capacity}" Width="100"/>
                        <DataGridTextColumn Header="Цена/ночь" Binding="{Binding PricePerNight, StringFormat={}{0:N0} ₽}" Width="120"/>

                        <!-- Удобства (список через запятую) -->
                        <DataGridTemplateColumn Header="Удобства" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ItemsControl ItemsSource="{Binding AmenitiesList}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#F3F4F6"
                                                       BorderBrush="#E5E7EB"
                                                       BorderThickness="1"
                                                       CornerRadius="8"
                                                       Padding="6,2"
                                                       Margin="0,0,4,4">
                                                    <TextBlock Text="{Binding Name}"
                                                              FontSize="11"
                                                              Foreground="#374151"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="Действия" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Удалить"
                                           Command="{Binding DataContext.DeleteCabinCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                           CommandParameter="{Binding}"
                                           Style="{StaticResource MaterialDesignFlatButton}"
                                           Foreground="Red"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>