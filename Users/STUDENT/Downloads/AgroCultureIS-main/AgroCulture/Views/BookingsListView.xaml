<UserControl x:Class="AgroCulture.Views.BookingsListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewmodels="clr-namespace:AgroCulture.ViewModels"
             Background="Transparent"
             UseLayoutRounding="True"
             SnapsToDevicePixels="True">

    <UserControl.DataContext>
        <viewmodels:BookingsListViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <!-- Градиенты для карточек статистики -->
        <LinearGradientBrush x:Key="TotalGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#15803D" Offset="0"/>
            <GradientStop Color="#16A34A" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="ActiveGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#16A34A" Offset="0"/>
            <GradientStop Color="#22C55E" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="CompletedGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#4B5563" Offset="0"/>
            <GradientStop Color="#6B7280" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="RevenueGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#7C3AED" Offset="0"/>
            <GradientStop Color="#8B5CF6" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="TableHeaderGradient" StartPoint="0,0.5" EndPoint="1,0.5">
            <GradientStop Color="#15803D" Offset="0"/>
            <GradientStop Color="#059669" Offset="1"/>
        </LinearGradientBrush>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="16">

            <!-- ═══════════════════════════════════════════════════════════ -->
            <!-- БЛОК 1: ПАНЕЛЬ СТАТИСТИКИ (4 КАРТОЧКИ) -->
            <!-- ═══════════════════════════════════════════════════════════ -->
            <Grid Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Карточка 1: ВСЕГО БРОНИРОВАНИЙ -->
                <materialDesign:Card Grid.Column="0" 
                                    UniformCornerRadius="8"
                                    Margin="0,0,6,0"
                                    materialDesign:ElevationAssist.Elevation="Dp8">
                    <Border Background="{StaticResource TotalGradient}"
                           CornerRadius="8"
                           Padding="16">
                        <StackPanel>
                            <!-- Заголовок -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <materialDesign:PackIcon Kind="CalendarMonth"
                                                        Width="16" Height="16"
                                                        Foreground="#BBF7D0"
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,8,0"/>
                                <TextBlock Text="Всего бронирований"
                                          FontSize="14"
                                          Foreground="#BBF7D0"/>
                            </StackPanel>
                            <!-- Значение -->
                            <TextBlock Text="{Binding TotalBookings}"
                                      FontSize="32"
                                      FontWeight="Medium"
                                      Foreground="White"/>
                        </StackPanel>
                    </Border>
                </materialDesign:Card>

                <!-- Карточка 2: АКТИВНЫХ -->
                <materialDesign:Card Grid.Column="1" 
                                    UniformCornerRadius="8"
                                    Margin="6,0,6,0"
                                    materialDesign:ElevationAssist.Elevation="Dp8">
                    <Border Background="{StaticResource ActiveGradient}"
                           CornerRadius="8"
                           Padding="16">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <materialDesign:PackIcon Kind="CheckCircleOutline"
                                                        Width="16" Height="16"
                                                        Foreground="#DCFCE7"
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,8,0"/>
                                <TextBlock Text="Активных"
                                          FontSize="14"
                                          Foreground="#DCFCE7"/>
                            </StackPanel>
                            <TextBlock Text="{Binding ActiveBookings}"
                                      FontSize="32"
                                      FontWeight="Medium"
                                      Foreground="White"/>
                        </StackPanel>
                    </Border>
                </materialDesign:Card>

                <!-- Карточка 3: ЗАВЕРШЕННЫХ -->
                <materialDesign:Card Grid.Column="2" 
                                    UniformCornerRadius="8"
                                    Margin="6,0,6,0"
                                    materialDesign:ElevationAssist.Elevation="Dp8">
                    <Border Background="{StaticResource CompletedGradient}"
                           CornerRadius="8"
                           Padding="16">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <materialDesign:PackIcon Kind="CheckCircle"
                                                        Width="16" Height="16"
                                                        Foreground="#E5E7EB"
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,8,0"/>
                                <TextBlock Text="Завершенных"
                                          FontSize="14"
                                          Foreground="#E5E7EB"/>
                            </StackPanel>
                            <TextBlock Text="{Binding CompletedBookings}"
                                      FontSize="32"
                                      FontWeight="Medium"
                                      Foreground="White"/>
                        </StackPanel>
                    </Border>
                </materialDesign:Card>

                <!-- Карточка 4: ОБЩАЯ ВЫРУЧКА -->
                <materialDesign:Card Grid.Column="3" 
                                    UniformCornerRadius="8"
                                    Margin="6,0,0,0"
                                    materialDesign:ElevationAssist.Elevation="Dp8">
                    <Border Background="{StaticResource RevenueGradient}"
                           CornerRadius="8"
                           Padding="16">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <materialDesign:PackIcon Kind="TrendingUp"
                                                        Width="16" Height="16"
                                                        Foreground="#EDE9FE"
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,8,0"/>
                                <TextBlock Text="Общая выручка"
                                          FontSize="14"
                                          Foreground="#EDE9FE"/>
                            </StackPanel>
                            <TextBlock FontSize="24"
                                      FontWeight="Medium"
                                      Foreground="White">
                                <Run Text="{Binding TotalRevenue, StringFormat='{}{0:N0}', Mode=OneWay}"/>
                                <Run Text="₽"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </materialDesign:Card>
            </Grid>

            <!-- ═══════════════════════════════════════════════════════════ -->
            <!-- БЛОК 2: ПАНЕЛЬ ФИЛЬТРОВ И ПОИСКА -->
            <!-- ═══════════════════════════════════════════════════════════ -->
            <materialDesign:Card UniformCornerRadius="8"
                                materialDesign:ElevationAssist.Elevation="Dp8"
                                Padding="16"
                                Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Поле поиска -->
                    <Grid Grid.Column="0" Margin="0,0,12,0">
                        <TextBox x:Name="SearchBox"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                materialDesign:HintAssist.Hint="Поиск по имени, телефону или домику..."
                                Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                                Height="40"
                                Padding="40,0,12,0"/>
                        <materialDesign:PackIcon Kind="Magnify"
                                                Width="16" Height="16"
                                                Foreground="#9CA3AF"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Left"
                                                Margin="12,0,0,0"
                                                IsHitTestVisible="False"/>
                    </Grid>

                    <!-- Группа кнопок -->
                    <StackPanel Grid.Column="1" 
                               Orientation="Horizontal"
                               VerticalAlignment="Center">

                        <!-- Фильтры статуса -->
                        <Button Content="Все"
                               Command="{Binding SetStatusFilterCommand}"
                               CommandParameter="all"
                               Height="32"
                               Padding="12,0"
                               Margin="0,0,8,0">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderBrush" Value="#D1D5DB"/>
                                    <Setter Property="Foreground" Value="#374151"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding StatusFilter}" Value="all">
                                            <Setter Property="Background" Value="#15803D"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Content="Активные"
                               Command="{Binding SetStatusFilterCommand}"
                               CommandParameter="active"
                               Height="32"
                               Padding="12,0"
                               Margin="0,0,8,0">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderBrush" Value="#D1D5DB"/>
                                    <Setter Property="Foreground" Value="#374151"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding StatusFilter}" Value="active">
                                            <Setter Property="Background" Value="#16A34A"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Content="Завершенные"
                               Command="{Binding SetStatusFilterCommand}"
                               CommandParameter="completed"
                               Height="32"
                               Padding="12,0"
                               Margin="0,0,16,0">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderBrush" Value="#D1D5DB"/>
                                    <Setter Property="Foreground" Value="#374151"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding StatusFilter}" Value="completed">
                                            <Setter Property="Background" Value="#4B5563"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Разделитель -->
                        <Border Width="1" Height="24" 
                               Background="#D1D5DB"
                               Margin="0,0,16,0"/>

                        <!-- Кнопка Excel -->
                        <Button Command="{Binding ExportToExcelCommand}"
                               Style="{StaticResource MaterialDesignOutlinedButton}"
                               Height="32"
                               Padding="12,0"
                               BorderBrush="#D1D5DB"
                               Margin="0,0,8,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Download"
                                                        Width="16" Height="16"
                                                        Foreground="#15803D"
                                                        Margin="0,0,4,0"/>
                                <TextBlock Text="Excel" Foreground="#15803D"/>
                            </StackPanel>
                        </Button>

                        <!-- Кнопка PDF -->
                        <Button Command="{Binding ExportToPdfCommand}"
                               Style="{StaticResource MaterialDesignOutlinedButton}"
                               Height="32"
                               Padding="12,0"
                               BorderBrush="#D1D5DB">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Download"
                                                        Width="16" Height="16"
                                                        Foreground="#DC2626"
                                                        Margin="0,0,4,0"/>
                                <TextBlock Text="PDF" Foreground="#DC2626"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>

            <!-- ═══════════════════════════════════════════════════════════ -->
            <!-- БЛОК 3: ТАБЛИЦА БРОНИРОВАНИЙ -->
            <!-- ═══════════════════════════════════════════════════════════ -->
            <materialDesign:Card UniformCornerRadius="8"
                                materialDesign:ElevationAssist.Elevation="Dp8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок таблицы -->
                    <Border Grid.Row="0" 
                           Background="{StaticResource TableHeaderGradient}"
                           Height="56"
                           CornerRadius="8,8,0,0"
                           Padding="16,0">
                        <Grid>
                            <TextBlock Text="Список бронирований"
                                      FontSize="18"
                                      FontWeight="Medium"
                                      Foreground="White"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Left"/>

                            <Border Background="White"
                                   CornerRadius="12"
                                   Padding="8,4"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Найдено: "
                                              FontSize="14"
                                              Foreground="#15803D"/>
                                    <TextBlock Text="{Binding FilteredCount}"
                                              FontSize="14"
                                              FontWeight="SemiBold"
                                              Foreground="#15803D"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- DataGrid -->
                    <DataGrid Grid.Row="1"
                             ItemsSource="{Binding FilteredBookings}"
                             AutoGenerateColumns="False"
                             CanUserAddRows="False"
                             CanUserDeleteRows="False"
                             CanUserReorderColumns="False"
                             CanUserResizeColumns="False"
                             CanUserResizeRows="False"
                             CanUserSortColumns="False"
                             IsReadOnly="True"
                             SelectionMode="Single"
                             HeadersVisibility="Column"
                             GridLinesVisibility="Horizontal"
                             HorizontalGridLinesBrush="#F3F4F6"
                             VerticalGridLinesBrush="Transparent"
                             RowHeight="56">

                        <DataGrid.Resources>
                            <!-- Стиль заголовков -->
                            <Style TargetType="DataGridColumnHeader" 
                                   BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                <Setter Property="Background" Value="#F9FAFB"/>
                                <Setter Property="Foreground" Value="#374151"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="Height" Value="48"/>
                                <Setter Property="Padding" Value="16,0"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="#E5E7EB"/>
                            </Style>

                            <!-- Стиль строк -->
                            <Style TargetType="DataGridRow" 
                                   BasedOn="{StaticResource MaterialDesignDataGridRow}">
                                <Setter Property="Background" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F9FAFB"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>

                            <!-- Стиль ячеек -->
                            <Style TargetType="DataGridCell" 
                                   BasedOn="{StaticResource MaterialDesignDataGridCell}">
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="16,0"/>
                            </Style>
                        </DataGrid.Resources>

                        <DataGrid.Columns>
                            <!-- № (ID) -->
                            <DataGridTextColumn Header="№" Width="50" 
                                               Binding="{Binding BookingId}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="FontSize" Value="14"/>
                                        <Setter Property="Foreground" Value="#424242"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Домик -->
                            <DataGridTextColumn Header="Домик" Width="180" 
                                               Binding="{Binding CabinName}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="FontSize" Value="14"/>
                                        <Setter Property="Foreground" Value="#15803D"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Гость -->
                            <DataGridTextColumn Header="Гость" Width="220" 
                                               Binding="{Binding GuestName}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontSize" Value="14"/>
                                        <Setter Property="Foreground" Value="#1F2937"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Телефон -->
                            <DataGridTextColumn Header="Телефон" Width="150" 
                                               Binding="{Binding GuestPhone}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontSize" Value="14"/>
                                        <Setter Property="Foreground" Value="#6B7280"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Заезд -->
                            <DataGridTextColumn Header="Заезд" Width="120" 
                                               Binding="{Binding CheckInDate, StringFormat=yyyy-MM-dd}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontSize" Value="14"/>
                                        <Setter Property="Foreground" Value="#6B7280"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Выезд -->
                            <DataGridTextColumn Header="Выезд" Width="120" 
                                               Binding="{Binding CheckOutDate, StringFormat=yyyy-MM-dd}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontSize" Value="14"/>
                                        <Setter Property="Foreground" Value="#6B7280"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Ночей -->
                            <DataGridTextColumn Header="Ночей" Width="80" 
                                               Binding="{Binding Nights}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontSize" Value="14"/>
                                        <Setter Property="Foreground" Value="#374151"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Сумма -->
                            <DataGridTextColumn Header="Сумма" Width="120">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="TotalPrice" StringFormat="{}{0:N0} ₽"/>
                                </DataGridTextColumn.Binding>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontSize" Value="14"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Foreground" Value="#16A34A"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Статус (Badge) -->
                            <DataGridTemplateColumn Header="Статус" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border x:Name="StatusBadge"
                                               Background="#DCFCE7"
                                               BorderBrush="#BBF7D0"
                                               BorderThickness="1"
                                               CornerRadius="12"
                                               Padding="6,3"
                                               Height="24"
                                               HorizontalAlignment="Left">
                                            <TextBlock x:Name="StatusText"
                                                      Text="Активно"
                                                      FontSize="12"
                                                      FontWeight="Medium"
                                                      Foreground="#15803D"
                                                      HorizontalAlignment="Center"/>
                                        </Border>
                                        <DataTemplate.Triggers>
                                            <DataTrigger Binding="{Binding Status}" Value="completed">
                                                <Setter TargetName="StatusBadge" Property="Background" Value="#F3F4F6"/>
                                                <Setter TargetName="StatusBadge" Property="BorderBrush" Value="#E5E7EB"/>
                                                <Setter TargetName="StatusText" Property="Text" Value="Завершено"/>
                                                <Setter TargetName="StatusText" Property="Foreground" Value="#374151"/>
                                            </DataTrigger>
                                        </DataTemplate.Triggers>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Действия (только для admin/manager) -->
                            <DataGridTemplateColumn Header="Действия" Width="140"
                       Visibility="{Binding DataContext.ShowActionsColumn, 
                       RelativeSource={RelativeSource AncestorType=UserControl}, 
                       Converter={StaticResource BoolToVisibilityConverter}}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center">
                                            <!-- Кнопка редактирования -->
                                            <Button Width="32" Height="32"
                       ToolTip="Редактировать"
                       Command="{Binding DataContext.EditBookingCommand, 
                       RelativeSource={RelativeSource AncestorType=DataGrid}}"
                       CommandParameter="{Binding}"
                       Margin="0,0,8,0">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Background" Value="Transparent"/>
                                                        <Setter Property="BorderBrush" Value="#60A5FA"/>
                                                        <Setter Property="BorderThickness" Value="1"/>
                                                        <Setter Property="Cursor" Value="Hand"/>
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}"
                                               BorderBrush="{TemplateBinding BorderBrush}"
                                               BorderThickness="{TemplateBinding BorderThickness}"
                                               CornerRadius="6">
                                                                        <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#DBEAFE"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                                <materialDesign:PackIcon Kind="Pencil"
                                            Width="16" Height="16"
                                            Foreground="#2563EB"/>
                                            </Button>

                                            <!-- ✅ НОВОЕ: Кнопка удаления -->
                                            <Button Width="32" Height="32"
                       ToolTip="Удалить"
                       Command="{Binding DataContext.DeleteBookingCommand, 
                       RelativeSource={RelativeSource AncestorType=DataGrid}}"
                       CommandParameter="{Binding}">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Background" Value="Transparent"/>
                                                        <Setter Property="BorderBrush" Value="#F87171"/>
                                                        <Setter Property="BorderThickness" Value="1"/>
                                                        <Setter Property="Cursor" Value="Hand"/>
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}"
                                               BorderBrush="{TemplateBinding BorderBrush}"
                                               BorderThickness="{TemplateBinding BorderThickness}"
                                               CornerRadius="6">
                                                                        <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#FEE2E2"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                                <materialDesign:PackIcon Kind="Delete"
                                            Width="16" Height="16"
                                            Foreground="#DC2626"/>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </materialDesign:Card>
        </StackPanel>
    </ScrollViewer>
</UserControl>