<Window x:Class="AgroCulture.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Лесная усадьба - Система бронирования" 
        Height="1080" Width="1920"
        MinHeight="600" MinWidth="1024"
        WindowStartupLocation="CenterScreen"
        Background="#f9fafb"
        FontFamily="{materialDesign:MaterialDesignFont}"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        RenderOptions.BitmapScalingMode="HighQuality">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Light" 
                                            PrimaryColor="Green" 
                                            SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
                <ResourceDictionary Source="Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Стили табов -->
            <Style x:Key="ModernTabButton" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="20,12"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="8"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#f3f4f6"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#e5e7eb"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="ActiveTabButton" TargetType="Button" BasedOn="{StaticResource ModernTabButton}">
                <Setter Property="Background" Value="#15803d"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <!-- ⚠️ ДОЛЖЕН БЫТЬ ТОЛЬКО ОДИН Grid (НЕ ДВА!) -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" 
                Background="White"
                BorderBrush="#e5e7eb" 
                BorderThickness="0,0,0,1">
            <Border.Effect>
                <DropShadowEffect BlurRadius="8" 
                                ShadowDepth="0" 
                                Color="#000000" 
                                Opacity="0.06"/>
            </Border.Effect>

            <Grid Height="80" Margin="32,0">
                <!-- Левая часть: Логотип -->
                <StackPanel Orientation="Horizontal" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Left">

                    <Border Width="48" Height="48"
                            Background="#15803d"
                            CornerRadius="24"
                            Margin="0,0,16,0">
                        <materialDesign:PackIcon Kind="PineTree" 
                                                Width="28" Height="28"
                                                Foreground="White"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Лесная усадьба" 
                                  FontSize="20"
                                  FontWeight="Bold"
                                  Foreground="#1f2937"/>
                        <TextBlock Text="Система бронирования домиков" 
                                  FontSize="12"
                                  Foreground="#6b7280"
                                  Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Правая часть: Профиль -->
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Right" 
                           VerticalAlignment="Center">

                    <materialDesign:Card Padding="12,8" x:Name="UserNameCard"
                        UniformCornerRadius="8"
                        materialDesign:ElevationAssist.Elevation="Dp0"
                        Background="#f9fafb"
                        Margin="0,0,12,0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                <materialDesign:PackIcon Kind="Account" 
                                        Width="14" Height="14"
                                        Foreground="#6b7280" 
                                        VerticalAlignment="Center"
                                        Margin="0,0,6,0"/>
                                <TextBlock x:Name="UserNameText" 
                          Text="Петров Петр Петрович"
                          FontSize="13" 
                          FontWeight="Medium"
                          Foreground="#1f2937"
                          VerticalAlignment="Center"/>
                            </StackPanel>

                            <Border x:Name="UserRoleBadge"
                   Background="#7c3aed"
                   CornerRadius="10"
                   Padding="8,3"
                   HorizontalAlignment="Left">
                                <TextBlock x:Name="UserRoleText" 
                          Text="Администратор" 
                          FontSize="11" 
                          FontWeight="Medium"
                          Foreground="White"/>
                            </Border>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- ✅ ИЗМЕНЕНО: Кнопка профиля скрыта для гостя -->
                    <Button x:Name="ProfileButton"
                           Style="{StaticResource MaterialDesignIconButton}"
                           Width="40" Height="40" 
                           Margin="0,0,8,0"
                           Click="ProfileButton_Click"
                           ToolTip="Мой профиль">
                                        <materialDesign:PackIcon Kind="AccountCircle" 
                                                Width="24" Height="24"
                                                Foreground="#6b7280"/>
                                    </Button>

                                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                           Height="40"
                           Padding="16,0"
                           Background="#dc2626"
                           BorderBrush="#dc2626"
                           Click="LogoutButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Logout" 
                                    Width="16" Height="16"
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Center"/>
                            <TextBlock Text="Выход" 
                      FontSize="14"
                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- CONTENT AREA -->
        <Grid Grid.Row="1">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#f0fdf4" Offset="0"/>
                    <GradientStop Color="#ffffff" Offset="0.5"/>
                    <GradientStop Color="#ecfdf5" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Grid MaxWidth="1400" 
                 HorizontalAlignment="Stretch"
                 Margin="32,24">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- NAVIGATION TABS -->
                <materialDesign:Card Grid.Row="0"
                    Padding="8"
                    Margin="0,0,0,24"
                    UniformCornerRadius="12"
                    materialDesign:ElevationAssist.Elevation="Dp2">

                    <Grid x:Name="NavigationTabsGrid" Height="56">
                        <!-- ColumnDefinitions заполняются в code-behind -->

                        <!-- ✅ ВАЖНО: Grid.Column устанавливается в code-behind! -->

                        <!-- TAB 1: Сотрудники (только admin) -->
                        <Button x:Name="StaffTabButton" 
                Background="#F3E8FF"
                Style="{StaticResource ActiveTabButton}"
                Click="StaffTabButton_Click">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="AccountGroup" 
                                        Width="20" Height="20"
                                        Foreground="#7c3aed"
                                        Margin="0,0,10,0"
                                        VerticalAlignment="Center"/>
                                <TextBlock Text="Сотрудники" 
                          FontSize="14" 
                          FontWeight="SemiBold"
                          Foreground="#7c3aed"
                          VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- TAB 2: Бронирование (admin + manager) -->
                        <Button x:Name="BookingTabButton" 
                Background="Transparent"
                Style="{StaticResource ModernTabButton}"
                Click="BookingTabButton_Click">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="Home" 
                                        Width="20" Height="20"
                                        Foreground="#6b7280"
                                        Margin="0,0,10,0"
                                        VerticalAlignment="Center"/>
                                <TextBlock Text="Бронирование" 
                          FontSize="14" 
                          FontWeight="SemiBold"
                          Foreground="#6b7280"
                          VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- TAB 3: Список бронирований (все) -->
                        <Button x:Name="ListTabButton" 
                Background="Transparent"
                Style="{StaticResource ModernTabButton}"
                Click="ListTabButton_Click">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="FormatListBulleted" 
                                        Width="20" Height="20"
                                        Foreground="#6b7280"
                                        Margin="0,0,10,0"
                                        VerticalAlignment="Center"/>
                                <TextBlock Text="Список бронирований" 
                          FontSize="14" 
                          FontWeight="SemiBold"
                          Foreground="#6b7280"
                          VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </materialDesign:Card>

                <!-- CONTENT FRAME -->
                <Border Grid.Row="1"
                        Background="White"
                        CornerRadius="12"
                        BorderBrush="#e5e7eb"
                        BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="12" 
                                        ShadowDepth="0" 
                                        Color="#000000" 
                                        Opacity="0.08"/>
                    </Border.Effect>

                    <Frame x:Name="MainContentFrame" 
                          NavigationUIVisibility="Hidden"
                          Margin="24"/>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>