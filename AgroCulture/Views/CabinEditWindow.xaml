<Window x:Class="AgroCulture.Views.CabinEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Редактировать домик"
        Width="650" Height="900"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <DropShadowEffect x:Key="WindowShadow" BlurRadius="25" ShadowDepth="8" Opacity="0.35" Color="Black"/>

        <!-- Конвертер для инверсии видимости -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Border CornerRadius="16" Background="White">
        <Border.Effect>
            <StaticResource ResourceKey="WindowShadow"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Border Grid.Row="0" CornerRadius="16,16,0,0" Padding="32,24">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#16A34A" Offset="0"/>
                        <GradientStop Color="#10B981" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="HomeEdit" Width="28" Height="28" 
                                                Foreground="White" VerticalAlignment="Center"/>
                        <StackPanel Margin="16,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="Редактирование домика" FontSize="22" FontWeight="SemiBold" Foreground="White"/>
                            <TextBlock x:Name="TxtCabinInfo" Text="Загрузка..." FontSize="12" Foreground="#D1FAE5" Margin="0,4,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <Button HorizontalAlignment="Right" Style="{StaticResource MaterialDesignFlatButton}"
                           Click="BtnClose_Click" Width="40" Height="40" Padding="0">
                        <materialDesign:PackIcon Kind="Close" Width="24" Height="24" Foreground="White"/>
                    </Button>
                </Grid>
            </Border>

            <!-- CONTENT -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="32" Margin="12,4,0,0">
                <StackPanel>
                    <!-- Основная информация -->
                    <TextBlock Text="📋 Основная информация" FontSize="16" FontWeight="SemiBold" Foreground="#1F2937" Margin="0,0,0,16"/>

                    <!-- Название -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Название *" FontSize="14" Foreground="#374151" Margin="0,0,0,8" FontWeight="Medium"/>
                        <TextBox x:Name="TxtName" Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                materialDesign:HintAssist.Hint="Березка, Сосна..." Height="56" Padding="16,0" FontSize="14" VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <!-- Описание -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Описание" FontSize="14" Foreground="#374151" Margin="0,0,0,8" FontWeight="Medium"/>
                        <TextBox x:Name="TxtDescription" Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                materialDesign:HintAssist.Hint="Уютный домик в лесу..."
                                Height="100" AcceptsReturn="True" Padding="16,12" FontSize="14"/>
                    </StackPanel>

                    <!-- Разделитель -->
                    <Border Height="1" Background="#E5E7EB" Margin="0,12,0,12"/>

                    <!-- Параметры -->
                    <TextBlock Text="⚙️ Параметры" FontSize="16" FontWeight="SemiBold" Foreground="#1F2937" Margin="0,0,0,16"/>

                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Вместимость -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Вместимость (чел) *" FontSize="14" Foreground="#374151" Margin="0,0,0,8" FontWeight="Medium"/>
                            <TextBox x:Name="TxtCapacity" Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    materialDesign:HintAssist.Hint="4" Height="56" Padding="16,0" FontSize="14" VerticalContentAlignment="Center"/>
                        </StackPanel>

                        <!-- Цена -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Цена за ночь (₽) *" FontSize="14" Foreground="#374151" Margin="0,0,0,8" FontWeight="Medium"/>
                            <TextBox x:Name="TxtPrice" Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    materialDesign:HintAssist.Hint="3500" Height="56" Padding="16,0" FontSize="14" VerticalContentAlignment="Center"/>
                        </StackPanel>
                    </Grid>

                    <!-- Статус -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Статус" FontSize="14" Foreground="#374151" Margin="0,0,0,8" FontWeight="Medium"/>
                        <ComboBox x:Name="CmbStatus" Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                 materialDesign:HintAssist.Hint="Выберите статус" Height="56" FontSize="14">
                            <ComboBoxItem Content="✅ Активный" Tag="true" IsSelected="True"/>
                            <ComboBoxItem Content="❌ Неактивный" Tag="false"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Разделитель -->
                    <Border Height="1" Background="#E5E7EB" Margin="0,12,0,12"/>

                    <!-- Удобства -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="✨ Удобства" FontSize="16" FontWeight="SemiBold" Foreground="#1F2937" Margin="0,0,0,12"/>

                        <!-- Добавление удобства -->
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <ComboBox Grid.Column="0" x:Name="CmbAmenities" 
                                     Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                     materialDesign:HintAssist.Hint="Выберите удобство для добавления"
                                     Height="48" FontSize="14"
                                     DisplayMemberPath="DisplayName"
                                     SelectedValuePath="AmenityId"/>

                            <Button Grid.Column="2" x:Name="BtnAddAmenity" Click="BtnAddAmenity_Click"
                                   Style="{StaticResource MaterialDesignRaisedButton}"
                                   Height="48" Width="120">
                                <Button.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#16A34A" Offset="0"/>
                                        <GradientStop Color="#10B981" Offset="1"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Plus" Width="18" Height="18" Margin="0,0,6,0"/>
                                    <TextBlock Text="Добавить" FontSize="13" FontWeight="Medium"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <!-- Список выбранных удобств -->
                        <Border Background="#F9FAFB" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8" Padding="12">
                            <Grid MinHeight="150">
                                <!-- Заглушка когда нет удобств -->
                                <StackPanel x:Name="NoAmenitiesPlaceholder" 
                                           VerticalAlignment="Center" HorizontalAlignment="Center"
                                           Visibility="Visible">
                                    <materialDesign:PackIcon Kind="HomeOff" Width="48" Height="48" 
                                                            Foreground="#D1D5DB" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Нет выбранных удобств" 
                                              FontSize="13" Foreground="#9CA3AF" 
                                              HorizontalAlignment="Center" Margin="0,8,0,0"/>
                                </StackPanel>

                                <!-- Список удобств -->
                                <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                                    <ItemsControl x:Name="AmenitiesListBox">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="White" BorderBrush="#E5E7EB" BorderThickness="1"
                                                       CornerRadius="20" Padding="10,6" Margin="4,4">
                                                    <Border.Effect>
                                                        <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.1"/>
                                                    </Border.Effect>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Grid.Column="0" Text="{Binding Icon}" FontSize="14" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                                        <TextBlock Grid.Column="1" Text="{Binding Name}" FontSize="13" FontWeight="Medium" 
                                                                  Foreground="#1F2937" VerticalAlignment="Center"/>
                                                        <Button Grid.Column="2" Click="BtnRemoveAmenity_Click" Tag="{Binding AmenityId}"
                                                               Style="{StaticResource MaterialDesignFlatButton}" 
                                                               Width="20" Height="20" Padding="0" Margin="6,0,0,0"
                                                               ToolTip="Удалить удобство">
                                                            <materialDesign:PackIcon Kind="Close" Width="14" Height="14" Foreground="#DC2626"/>
                                                        </Button>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Grid>
                        </Border>

                        <TextBlock Text="Выбрано удобств: " FontSize="12" Foreground="#6B7280" Margin="0,8,0,0">
                            <Run Text="{Binding ElementName=AmenitiesListBox, Path=Items.Count, Mode=OneWay}" FontWeight="SemiBold" Foreground="#059669"/>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- FOOTER -->
            <Border Grid.Row="2" BorderBrush="#E5E7EB" BorderThickness="0,1,0,0" Padding="32,20" Background="#F9FAFB">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Click="BtnCancel_Click" Style="{StaticResource MaterialDesignOutlinedButton}" Height="44" FontSize="14">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Close" Width="18" Height="18" Margin="0,0,8,0"/>
                            <TextBlock Text="Отмена"/>
                        </StackPanel>
                    </Button>

                    <Button Grid.Column="2" Click="BtnSave_Click" Style="{StaticResource MaterialDesignRaisedButton}" Height="44" FontSize="14">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#059669" Offset="0"/>
                                <GradientStop Color="#10B981" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ContentSave" Width="18" Height="18" Margin="0,0,8,0"/>
                            <TextBlock Text="Сохранить"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>